# ~/.bashrc
# managed by chezmoi

# If not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac

HISTCONTROL=ignoreboth
HISTSIZE=100000
HISTFILESIZE=200000

shopt -s histappend
shopt -s checkwinsize

[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias ll='ls -alF'
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

if [ -f ~/.bash_aliases ]; then
  . ~/.bash_aliases
fi

if [ -f /usr/share/bash-completion/bash_completion ]; then
  . /usr/share/bash-completion/bash_completion
elif [ -f /etc/bash_completion ]; then
  . /etc/bash_completion
fi



# WSL (Windowsの環境変数で `WSLENV = USERPROFILE:USERNAME:` を設定しておく)
if [ -n "$USERPROFILE" ]; then
  export WIN_HOME=$(wslpath $USERPROFILE)
fi

alias explorer="explorer.exe"
alias clip="clip.exe"

# Powerline
if [ -f /usr/share/powerline/bindings/bash/powerline.sh ]; then
  source /usr/share/powerline/bindings/bash/powerline.sh
fi

# 履歴検索
# https://qiita.com/wankoromaru/items/92a85bd84bb3e3a08c71
bind '"\e[B": history-search-forward'     # 下矢印キー
bind '"\e[A": history-search-backward'    # 上矢印キー
if [ -f /usr/share/doc/fzf/examples/key-bindings.bash ]; then
  source /usr/share/doc/fzf/examples/key-bindings.bash
fi

# 環境変数
export XDG_CONFIG_HOME="$HOME/.config"
export BROWSER="/mnt/c/Program Files/Google/Chrome/Application/chrome.exe"
export EDITOR="code --wait"
export VOLTA_HOME="$HOME/.volta"
export VOLTA_FEATURE_PNPM=1

export PATH="$VOLTA_HOME/bin:$PATH"

# エイリアス
alias xdg-open=wsl-open
alias ghcs="gh copilot suggest -t shell"
alias dc="docker compose"

# AWS CLI
complete -C '/usr/local/bin/aws_completer' aws

source $CHEZMOI_SOURCE_DIR/scripts/set_aws_profile.sh
alias awsp=set_aws_profile
alias awsq=set_aws_profile

source $CHEZMOI_SOURCE_DIR/scripts/set_aws_saml_login.sh
alias awssaml=set_aws_saml_login

# rye (廃止予定)
if [ -f "$HOME/.rye/env" ]; then
  source "$HOME/.rye/env"
fi

# sheldon
if [ -f "$HOME/.local/bin/sheldon" ]; then
  eval "$($HOME/.local/bin/sheldon source)"
fi
